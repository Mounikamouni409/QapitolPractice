<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="log-path">./logs</Property>
        <Property name="log-pattern">%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</Property>
    </Properties>
    
    <!-- Appender section-->
    
    <Appenders>
    
    <!-- Appender has two  references console and Rolling file and appenders can decide where we have to generate the logs-->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log-pattern}"/>
        </Console>

        <RollingFile name="File" fileName="${log-path}/automation.log"
                     filePattern="${log-path}/automation-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="${log-pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    
    <!-- Logger section-->

    <Loggers>
        <Root level="INFO"> <!-- here we can use >>>  All < Trace < Debug < Info < Warn < Error < Fatal < Off-->
            <!--<AppenderRef ref="Console"/>-->
            <AppenderRef ref="File"/> <!-- Here we have to pass either console or file, but file is useful-->
        </Root>
    </Loggers>
</Configuration>
